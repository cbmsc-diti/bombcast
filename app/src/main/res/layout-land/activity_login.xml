<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AuthenticationActivity"
    style="@style/AppTheme"
    android:background="@color/bg_dark_block">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/login_title"
        android:id="@+id/loggedUserLabel"
        android:textColor="@color/text_dark"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/loggedUserLabel"
        android:background="#484849"
        android:id="@+id/horizontalRule"></RelativeLayout>

    <AutoCompleteTextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLoginUser"
        android:hint="@string/login_hint"
        android:layout_below="@+id/horizontalRule"
        android:imeOptions="actionNext"
        android:focusable="true"
        android:focusableInTouchMode="true"

        android:layout_marginTop="16dp"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textIsSelectable="true"
        android:layout_marginLeft="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtLoginPassword"
        android:hint="@string/password_hint"
        android:layout_below="@+id/txtLoginUser"

        android:inputType="textPassword"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:layout_marginLeft="10dp" />

    <Button
        android:id="@+id/btn_login_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/button_default"
        android:minHeight="@dimen/button_height"
        android:minWidth="@dimen/button_width"
        android:text="@android:string/ok"
        android:onClick="makeLoginRequest"
        android:gravity="center"
        android:layout_below="@+id/show_password"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ajuda"
        android:id="@+id/btn_ajuda"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/bg_dark_block"
        android:enabled="true"
        android:textColor="@color/text_dark" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon_face"
        android:src="@drawable/icon_face_2"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/icon_twitter"
        android:src="@drawable/icon_twitter_2"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/icon_face"
        android:layout_toEndOf="@+id/icon_face"
        android:layout_marginLeft="4dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/icon_igarape"
        android:src="@drawable/icon_igarape_bc_2"
        android:focusableInTouchMode="false"
        android:background="@color/bg_dark_block"
        android:layout_alignTop="@+id/btn_radioonline"
        android:layout_toRightOf="@+id/icon_cbm"
        android:layout_toEndOf="@+id/icon_cbm" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Acesse:"
        android:id="@+id/tv_acesse"
        android:textColor="@color/text_dark"
        android:layout_above="@+id/icon_face"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="52dp"
        android:id="@+id/icon_cbm"
        android:src="@drawable/icon_cbm180_2"
        android:clickable="true"
        android:background="@color/bg_dark_block"
        android:layout_alignTop="@+id/icon_twitter"
        android:layout_toRightOf="@+id/icon_twitter"
        android:layout_toEndOf="@+id/icon_twitter" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar senha"
        android:id="@+id/show_password"
        android:layout_below="@+id/txtLoginPassword"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:checked="false"
        android:textColor="@color/text_dark"
        android:layout_toStartOf="@+id/icon_cbm"
        android:layout_alignRight="@+id/horizontalRule"
        android:layout_alignEnd="@+id/horizontalRule" />
    <Spinner
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:id="@+id/sp_servidores_radioonline"
        android:spinnerMode="dialog"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/icon_igarape"
        android:layout_alignTop="@+id/icon_igarape"
        android:layout_toLeftOf="@+id/btn_ajuda"
        android:layout_toStartOf="@+id/btn_ajuda" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Escolha uma região e clique no botão abaixo:"
        android:id="@+id/tv_desc_radio"
        android:textColor="@color/text_dark"
        android:layout_below="@+id/tv_radioonline_titulo"
        android:layout_toRightOf="@+id/iv_radio"
        android:layout_toEndOf="@+id/iv_radio" />

    <ToggleButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="btn_radioonline"
        android:id="@+id/btn_radioonline"
        android:checked="false"
        android:layout_alignBottom="@+id/icon_cbm"
        android:layout_alignRight="@+id/tv_desc_radio"
        android:layout_alignEnd="@+id/tv_desc_radio" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RÁDIO ONLINE CBMSC:"
        android:id="@+id/tv_radioonline_titulo"
        android:textSize="20sp"
        android:layout_alignTop="@+id/iv_radio"
        android:layout_alignRight="@+id/show_password"
        android:layout_alignEnd="@+id/show_password"
        android:layout_marginTop="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_radio"
        android:src="@drawable/radio"
        android:layout_below="@+id/btn_login_ok"
        android:layout_alignLeft="@+id/sp_servidores_radioonline"
        android:layout_alignStart="@+id/sp_servidores_radioonline"
        android:layout_toLeftOf="@+id/tv_radioonline_titulo"
        android:layout_toStartOf="@+id/tv_radioonline_titulo"
        android:layout_above="@+id/sp_servidores_radioonline"
        android:layout_marginTop="5dp" />


</RelativeLayout>
