<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/bg_dark_block">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/msg_selecione_vtr"
        android:id="@+id/tv_select_vtr"
        android:textSize="25sp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/monitorar"
        android:id="@+id/btn_next"
        android:textSize="25sp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/sp_vtrs"
        android:layout_alignStart="@+id/sp_vtrs"
        android:layout_marginBottom="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/vtr_monitorada"
        android:id="@+id/tv_monitorando_ok"
        android:textSize="25sp"
        android:visibility="invisible"
        android:layout_below="@+id/tv_select_vtr"
        android:layout_alignLeft="@+id/tv_select_vtr"
        android:layout_alignStart="@+id/tv_select_vtr" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:id="@+id/btn_back"
        android:textSize="25sp"
        android:visibility="visible"
        android:enabled="true"
        android:layout_alignTop="@+id/btn_next"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp" />

    <Spinner
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/sp_vtrs"
        android:spinnerMode="dialog"
        android:layout_below="@+id/tv_monitorando_ok"
        android:layout_alignLeft="@+id/tv_monitorando_ok"
        android:layout_alignStart="@+id/tv_monitorando_ok"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/et_cel_cmt_area"
        android:phoneNumber="true"
        android:enabled="false"
        android:layout_below="@+id/tv_desc_telefone"
        android:layout_alignLeft="@+id/tv_desc_telefone"
        android:layout_alignStart="@+id/tv_desc_telefone"
        android:text="@string/fone"
        android:hint="@string/hint_fone"  />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:id="@+id/btn_edit_telefone"
        android:enabled="true"
        android:layout_alignBottom="@+id/et_cel_cmt_area"
        android:layout_toRightOf="@+id/et_cel_cmt_area"
        android:layout_toEndOf="@+id/et_cel_cmt_area" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/text_wpp"
        android:id="@+id/tv_desc_telefone"
        android:layout_below="@+id/sp_vtrs"
        android:layout_alignLeft="@+id/sp_vtrs"
        android:layout_alignStart="@+id/sp_vtrs"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tv_nm_cmt"
        android:layout_below="@+id/et_cel_cmt_area"
        android:layout_alignLeft="@+id/et_cel_cmt_area"
        android:layout_alignStart="@+id/et_cel_cmt_area" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/descarregar_videos"
        android:enabled="true"
        android:id="@+id/btn_upload"
        android:textSize="25sp"
        android:layout_alignTop="@+id/btn_next"
        android:layout_alignLeft="@+id/btn_edit_telefone"
        android:layout_alignStart="@+id/btn_edit_telefone" />

</RelativeLayout>